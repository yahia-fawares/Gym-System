@model IEnumerable<GymSystem2.Models.User>

@{
    ViewData["Title"] = "Index";
    Layout = "~/views/shared/AdminLayout.cshtml";

}

<h1>Index</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Password)
            </th>
             
            <th>
                @Html.DisplayNameFor(model => model.Profile.Fname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Profile.Lname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Role)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
           
            <td>
                @Html.DisplayFor(modelItem => item.Profile.Fname)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Profile.Lname)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.Role.Rolename)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Userid">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Userid">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Userid">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
